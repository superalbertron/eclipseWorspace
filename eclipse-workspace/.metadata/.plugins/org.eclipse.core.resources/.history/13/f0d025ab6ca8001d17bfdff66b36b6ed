package abstractainterface3;

public class Ropa extends Producto {
	private String talla;
	private String color;
    
    public Ropa(String nombre, String descripcion, double precio, String talla, String color) {
        super(nombre, descripcion, precio);
        this.talla=talla;
        this.color=color;
    }
    @Override
    public void MostrarInformacion() {
        super.MostrarInformacion();
        System.out.println("La talla es: " + talla+ " el color es "+color);
    }

	@Override
	public void SuCompra() {
		System.out.println("Ha comprado ropa, gracias");
		// TODO Esbozo de método generado automáticamente
		
	}
}
